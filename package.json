{
  "name": "verticx-backend",
  "version": "1.0.0",
  "description": "Verticx ERP backend (TypeScript, Express)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "build": "prisma migrate deploy && prisma generate && tsc && cp -r public dist/",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:seed": "ts-node src/script/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.21.0",
    "@prisma/client": "^6.18.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@sendgrid/mail": "^8.1.6",
    "@vercel/blob": "^2.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-validator": "^6.15.0",
    "helmet": "^7.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.6"
  },
  "overrides": {
    "glob": "^10.4.1",
    "rimraf": "^5.0.7"
  }
}
