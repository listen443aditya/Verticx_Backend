{
  "name": "verticx-backend",
  "version": "1.0.0",
  "description": "Verticx ERP backend (TypeScript, Express)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
