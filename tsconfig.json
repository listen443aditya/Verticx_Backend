{
  "compilerOptions": {
    // Target modern JavaScript features
    "target": "ES2020",
    // Use NodeNext modules for compatibility with nodenext resolution
    // --- BEFORE ---
    "module": "NodeNext",
    "moduleResolution": "nodenext",
  //  "module": "commonjs",
  //  "moduleResolution": "bundler",    // Output compiled files here
    "outDir": "./dist",
    // Source root
    "rootDir": "./src",
    // Enable strict type-checking
    "strict": true,
    // Allow default imports from CommonJS modules
    "esModuleInterop": true,
    // Skip type checks on declaration files (speeds up build)
    "skipLibCheck": true,
    // Allow importing JSON modules
    "resolveJsonModule": true,
    // Ensure consistent file casing
    "forceConsistentCasingInFileNames": true,
    // Enable source maps (optional, useful for debugging)
    "sourceMap": true
  },
 "include": ["src", "public"],
  "exclude": ["node_modules", "dist"]
}
